<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/shape_search"
    >
    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_book_order"
        android:gravity="center_vertical"
        android:text="订单号:"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/order_image_user1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"

            />
        <ImageView
            android:id="@+id/order_image_user2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"

            />

        <ImageView
            android:id="@+id/order_image_user3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"

            />

        <ImageView
            android:id="@+id/order_image_user4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            />
        <TextView
            android:id="@+id/tv_order_detail"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:textColor="#999999"

            android:padding="7dp"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/tv_book_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="共5本书"
        android:textStyle="bold"
        android:gravity="right"
        />
        <TextView
            android:id="@+id/tv_book_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="合计：￥30.00"
            android:textStyle="bold"
            android:gravity="center"
            />
    <TextView
        android:id="@+id/tv_confirm_picked"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="#E24146"
        android:clickable="true"
        android:gravity="center"
        android:text="确认提取"
        android:textSize="16dp"
        android:textColor="#FAFAFA" />
    </LinearLayout>
</LinearLayout>
