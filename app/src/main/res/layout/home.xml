<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.MainActivity"
    android:background="@drawable/background">
    <include layout="@layout/title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <include layout="@layout/show_homepage_picture"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_fillet_white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_pro"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"

                    />
                <LinearLayout
                    android:id="@+id/professional_book_top1_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/professional_book_top1_cover_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bob"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:padding="50dp"
                        android:layout_marginBottom="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/professional_book_top1_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数据库系统教程"
                            android:textSize="@dimen/title"
                            android:layout_marginLeft="30dp"
                            android:paddingRight="10dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/professional_book_top1_num_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="30dp"
                            android:paddingRight="10dp"
                            android:text="编号："
                            android:textSize="@dimen/small"
                            />
                        <TextView
                            android:id="@+id/professional_book_top1_inventory_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:paddingRight="10dp"
                            android:text="库存："
                            android:textSize="@dimen/small"
                            />
                        <TextView
                            android:id="@+id/professional_book_top1_price_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:paddingRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="￥ 45.90"
                            android:textSize="@dimen/title"
                            android:textColor="#c1272d"
                            />
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#cccccc"
                    >
                </View>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/professional_book_top2_cover_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/bob" />

                    <ImageView
                        android:id="@+id/professional_book_top3_cover_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/bob" />

                    <ImageView
                        android:id="@+id/professional_book_top4_cover_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/bob" />

                    <Button
                        android:id="@+id/more_pro_button"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:layout_weight="1.5"
                        android:background="@null"
                        android:text="> 查看更多"
                        android:textColor="#999999"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_fillet_white"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_pub"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"

                    />
                <LinearLayout
                    android:id="@+id/public_book_top1_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/public_book_top1_cover_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bob"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:padding="50dp"
                        android:layout_marginBottom="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/public_book_top1_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数据库系统教程"
                            android:textSize="@dimen/title"
                            android:layout_marginLeft="30dp"
                            android:paddingRight="10dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/public_book_top1_num_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginLeft="30dp"
                            android:paddingRight="10dp"
                            android:text="编号："
                            android:textSize="@dimen/small"
                            />
                        <TextView
                            android:id="@+id/public_book_top1_inventory_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:paddingRight="10dp"
                            android:text="库存："
                            android:textSize="@dimen/small"
                            />
                        <TextView
                            android:id="@+id/public_book_top1_price_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:paddingRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="￥ 45.90"
                            android:textSize="@dimen/title"
                            android:textColor="#c1272d"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#cccccc"
                    >
                </View>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/public_book_top2_cover_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/bob" />

                    <ImageView
                        android:id="@+id/public_book_top3_cover_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/bob" />

                    <ImageView
                        android:id="@+id/public_book_top4_cover_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/bob" />

                    <Button
                        android:id="@+id/more_pub_button"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:layout_weight="1.5"
                        android:background="@null"
                        android:text="> 查看更多"
                        android:textColor="#999999"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



    <!-- 下方导航栏 -->



    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/bg_shadow_rectangle"
        android:alpha="0.2"/>-->

</LinearLayout>
